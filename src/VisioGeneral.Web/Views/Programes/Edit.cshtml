@model VisioGeneral.Web.Models.Entities.Programa
@{
    ViewData["Title"] = "Editar programa";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Programes</a></li>
            <li class="breadcrumb-item active">Editar</li>
        </ol>
    </nav>
    <h1 class="section-title">Editar programa</h1>
</div>

<div class="row">
    <div class="col-md-10">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="DataCreacio" />

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label asp-for="Nom" class="form-label">Nom del programa *</label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="NomCurt" class="form-label">Nom curt</label>
                            <input asp-for="NomCurt" class="form-control" maxlength="50" />
                            <span asp-validation-for="NomCurt" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="ServeiId" class="form-label">Servei *</label>
                            <select asp-for="ServeiId" class="form-select" asp-items="@((IEnumerable<SelectListItem>)ViewBag.Serveis)">
                                <option value="">Selecciona un servei...</option>
                            </select>
                            <span asp-validation-for="ServeiId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DirectorId" class="form-label">Director/a responsable</label>
                            <select asp-for="DirectorId" class="form-select" asp-items="@ViewBag.Directors">
                                <option value="">Sense assignar</option>
                            </select>
                            <span asp-validation-for="DirectorId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcio" class="form-label">Descripció</label>
                        <textarea asp-for="Descripcio" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Descripcio" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <label asp-for="NumTreballadors" class="form-label">Núm. treballadors</label>
                            <input asp-for="NumTreballadors" class="form-control" type="number" min="0" />
                            <span asp-validation-for="NumTreballadors" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="NumUsuaris" class="form-label">Núm. usuaris</label>
                            <input asp-for="NumUsuaris" class="form-control" type="number" min="0" />
                            <span asp-validation-for="NumUsuaris" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Estat" class="form-label">Estat *</label>
                            <select asp-for="Estat" class="form-select" asp-items="@((IEnumerable<SelectListItem>)ViewBag.Estats)">
                            </select>
                            <span asp-validation-for="Estat" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="Ordre" class="form-label">Ordre</label>
                            <input asp-for="Ordre" class="form-control" type="number" />
                            <span asp-validation-for="Ordre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="DataInici" class="form-label">Data inici</label>
                            <input asp-for="DataInici" class="form-control" type="date" />
                            <span asp-validation-for="DataInici" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="DataFi" class="form-label">Data fi</label>
                            <input asp-for="DataFi" class="form-control" type="date" />
                            <span asp-validation-for="DataFi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-check-inline">
                            <input asp-for="EsNou" class="form-check-input" />
                            <label asp-for="EsNou" class="form-check-label">És nou</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="EsLiniaCreixement" class="form-check-input" />
                            <label asp-for="EsLiniaCreixement" class="form-check-label">Línia de creixement</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input asp-for="Actiu" class="form-check-input" />
                            <label asp-for="Actiu" class="form-check-label">Actiu</label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Desar canvis
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel·lar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
