@model IEnumerable<VisioGeneral.Web.Models.Entities.Servei>
@{
    ViewData["Title"] = "Serveis";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="section-title mb-0">Serveis</h1>
    <a asp-action="Create" asp-route-areaId="@ViewBag.AreaIdActual" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Nou servei
    </a>
</div>

@if (TempData["Missatge"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Missatge"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filtre per àrea -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Filtrar per àrea</label>
                <select name="areaId" class="form-select" asp-items="@ViewBag.Areas">
                    <option value="">Totes les àrees</option>
                </select>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-outline-primary">Filtrar</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Netejar</a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width: 60px">Ordre</th>
                    <th>Àrea</th>
                    <th>Nom del servei</th>
                    <th>Descripció</th>
                    <th class="text-center">Programes</th>
                    <th class="text-center">Estat</th>
                    <th class="text-end">Accions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var servei in Model)
                {
                    <tr class="@(!servei.Actiu ? "table-secondary" : "")">
                        <td>@servei.Ordre</td>
                        <td>
                            <span class="badge" style="background-color: @servei.Area.Color; color: white;">@servei.Area.Codi</span>
                        </td>
                        <td><strong>@servei.Nom</strong></td>
                        <td class="text-muted small">@servei.Descripcio</td>
                        <td class="text-center">
                            <span class="badge bg-secondary">@servei.Programes.Count</span>
                        </td>
                        <td class="text-center">
                            @if (servei.Actiu)
                            {
                                <span class="badge bg-success">Actiu</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactiu</span>
                            }
                        </td>
                        <td class="text-end">
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Edit" asp-route-id="@servei.Id" class="btn btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="ToggleActiu" asp-route-id="@servei.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-secondary" title="@(servei.Actiu ? "Desactivar" : "Activar")">
                                        <i class="bi bi-@(servei.Actiu ? "toggle-on" : "toggle-off")"></i>
                                    </button>
                                </form>
                                <a asp-action="Delete" asp-route-id="@servei.Id" class="btn btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        No hi ha serveis registrats. <a asp-action="Create">Crear el primer servei</a>.
    </div>
}
