@model VisioGeneral.Web.Models.Entities.Director
@{
    ViewData["Title"] = "Nou director/a";
}

<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Directors</a></li>
            <li class="breadcrumb-item active">Nou</li>
        </ol>
    </nav>
    <h1 class="section-title">Nou director/a</h1>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Nom" class="form-label">Nom *</label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Cognoms" class="form-label">Cognoms</label>
                            <input asp-for="Cognoms" class="form-control" />
                            <span asp-validation-for="Cognoms" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Telefon" class="form-label">Telèfon</label>
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Tipus" class="form-label">Tipus *</label>
                            <select asp-for="Tipus" class="form-select">
                                <option value="">Selecciona...</option>
                                <option value="Tecnic">Tècnic/a</option>
                                <option value="Gerencia">Gerència</option>
                            </select>
                            <span asp-validation-for="Tipus" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="UsernameAD" class="form-label">Usuari Active Directory</label>
                            <input asp-for="UsernameAD" class="form-control" placeholder="DOMINI\usuari" />
                            <span asp-validation-for="UsernameAD" class="text-danger"></span>
                            <small class="form-text text-muted">Per identificació automàtica Windows</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="Actiu" class="form-check-input" checked="checked" />
                            <label asp-for="Actiu" class="form-check-label">Actiu</label>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Crear
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel·lar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
